{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["version", "actuators"],
  "properties": {
    "version": {"type": "string"},
    "actuators": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "ttl_s", "cooldown_s"],
        "properties": {
          "id": {"type": "string"},
          "ttl_s": {"type": "number", "minimum": 0},
          "cooldown_s": {"type": "number", "minimum": 0}
        }
      }
    }
  }
}
